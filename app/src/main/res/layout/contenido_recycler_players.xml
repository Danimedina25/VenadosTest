<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/blanco"
              android:id="@+id/contenido_recycler"
              android:orientation="vertical">
  <android.support.v7.widget.CardView
  android:layout_width="100dp"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:id="@+id/cardview"
  app:cardCornerRadius="50dp"
  android:clickable="true"
  android:layout_centerHorizontal="true"
  android:innerRadius="100dp"
  android:shape="ring"
  android:thicknessRatio="1.9"
  app:cardBackgroundColor="@color/verde">
   <ImageView android:layout_width="80dp" android:layout_height="100dp"
   android:layout_gravity="center"
   android:src="@drawable/escudo"
   android:clickable="true"
   android:padding="15dp"
   android:id="@+id/imagen"/>

  </android.support.v7.widget.CardView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="posicion"
    android:id="@+id/posicion_jugador"
    android:layout_gravity="center"
    android:textStyle="bold"
    android:textSize="10sp"
    android:textColor="@color/negro"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="nombre"
      android:id="@+id/nombre_jugador"
      android:layout_gravity="center"
      android:textStyle="bold"
      android:textSize="10sp"
      android:textColor="@color/negro"/>

</LinearLayout>
